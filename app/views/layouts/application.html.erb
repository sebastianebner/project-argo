<!DOCTYPE html>
<html>
  <head>
    <title>Flaxy</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  	<nav class="navbar navbar-default navbar-fixed-top">
  		<div class="container">
    		<div class="navbar-header">
      		<%= link_to image_tag("argo.png", :class => "logo-header"), root_path %>
    		</div>
    		<div id="navbar">
      		<% if current_user %>
            <div class = "facebook-pic">
              <ul class="nav navbar-nav pull-right">
                <li><%= image_tag current_user.image_url, alt: current_user.name, :class => "img-circle" %></li>
                <li><%= link_to 'Log Out', logout_path, method: :delete %></li>
              </ul>
            </div>
          <% else %>
            <ul class="nav navbar-nav pull-right">
              <li><%= link_to image_tag("facebook-login.png", :class => "facebook-log"), '/auth/facebook' %></li>
            </ul>
          <% end %>
    		</div>
  		</div>
		</nav>




		

<div class="container">
  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>">
      <%= value %>
    </div>
  <% end %>

  <%= yield %>
</div>

  
  </body>
</html>
