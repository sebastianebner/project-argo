<!DOCTYPE html>
<html>
  <head>
    <title>Flaxy</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  	<nav class="navbar navbar-default navbar-fixed-top">
  		<div class="container">
    	  <div class="navbar-header">
      		 <%= link_to image_tag("argo.png", :class => "logo-header"), root_path %>
    	  </div>
    		<div id="navbar">
      		<% if current_user %>
            <div class = "facebook-pic">
              <div class="nav navbar-nav pull-right">
                <div class="dropdown">
                  <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                    <a><%= image_tag current_user.image_url, alt: current_user.name, :class => "img-circle" %></a>
                    <span class="caret"></span>
                  </button>
                  <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                    <li><a href="#">Action</a></li>
                    <li><a href="#">Another action</a></li>
                    <li><a href="#">Something else here</a></li>
                    <li role="separator" class="divider"></li>
                    <li><a href="#">Separated link</a></li>
                  </ul>
                </div>
                <a><%= link_to 'Log Out', logout_path, method: :delete %></a>
              </div>
            </div>
          <% else %>
            <ul class="nav navbar-nav pull-right">
              <li><%= link_to image_tag("facebook-login.png", :class => "facebook-log"), '/auth/facebook' %></li>
            </ul>
          <% end %>
    		</div>
  		</div>
		</nav>

<%= yield %>
   
  </body>
</html>
